{% extends 'layout.twig' %}

{% block body %}
  
  <div class="search">
    <div class="formSearch">
          <input type="search" id="search">
      <button  type="submit" class="btnSearch"  onclick="ajaxload();"><i class="fas fa-search"></i></button>
    </div>
     
  </div>
  
  <div class="line"></div>
  
  <div class="container">
    
    <div class="row">
      <div class="col-lg-4">
        <div id="title">Введите название фильма в поисковую строку. Это не сложно.</div>
        <div id="poster"></div>
      </div>
      <div class="col-lg-8">
        <div id="movie"></div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-4 invisible addBtn" >
        <button id="watch" onclick="addToWatch();">Посмотрел</button>
        <button id="want">Хочу посмотреть</button>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-9">
        <div id="description"></div>
      </div>
    </div>
  
    <div class="row">
      <div class="col-lg-6 invisible watch">
        <div id="watchPoster"></div>
      </div>
      <div class="col-lg-6 invisible">
        <div id="watchMovie"></div>
      </div>
    </div>
    
  </div>

{% endblock %}



